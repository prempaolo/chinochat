<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prempaolo.simplenotification">

    <application android:allowBackup="true" android:label="@string/app_name"
        android:supportsRtl="true">
        <service
            android:name="com.prempaolo.simplenotification.gcm.ChinoMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name="com.prempaolo.simplenotification.gcm.ChinoInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>
